#include <iostream>
using namespace std;
int main() {
  int num1, num2, soma, i;

  cout << "Informe um número: ";
  cin >> num1;

  cout << "Informe outro número: ";
  cin >> num2;

  for (i = 0; i < 100; i++){
    cout << "Informe um número: ";
    cin >> num1;

    cout << "Informe outro número: ";
    cin >> num2;

    soma = num1 + num2;
    cout << "A soma dos pares são: " << soma << endl;
  }
}
